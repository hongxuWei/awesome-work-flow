{
  "manifest_version": 2,
  "name": "Awesome Work Flow",
  "version": "0.0.1",
  "description": "Awesome Work Flow - Extension",
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["js/content-script.js"],
    "run_at": "document_end"
  }],
  "background": {
    "scripts": ["js/background.js"]
  },
  "browser_action": {
    "defailt_icon": "img/icon.png",
    "default_title": "Awesome Work Flow",
    "default_popup": "pages/popup.html"
  },
  "chrome_url_overrides": { "newtab": "pages/common_web.html" },
  "permissions": [
    "tabs",
    "webRequest",
    "contextMenus",
    "notifications",
    "webRequestBlocking",
    "bookmarks",
    "storage",
    "http://*/*",
    "https://*/*"
  ],
  "homepage_url": "https://hongxuWei.github.io"
}
